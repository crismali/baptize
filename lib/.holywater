# Baptize config
BAPTIZE_ROOT="$HOME/.baptize"

# Prompt settings
PROMPT_FG="blue"
PROMPT_BG="cyan"
PROMPT_ICON="⚡ "
PROMPT_CONTENT=" \w "

# Git prompt settings
GSHOW_STATS="no"
GSHORT_PATH="yes"
GPULL_ICON=" ⇣ "
GPUSH_ICON=" ⇡ "
GCLEAN_ICON=" ✓ "

GCLEAN_FG="blue"
GCLEAN_BG="green"

GMODIFIED_FG="blue"
GMODIFIED_BG="yellow"

GADDED_FG="green"
GADDED_BG="yellow"

GDELETED_FG="red"
GDELETED_BG="yellow"

GSTATS_SEPARATOR=":"

# Plugin Settings
BAPTIZE_PLUGIN_ROOT="$BAPTIZE_ROOT/plugins"
BAPTIZE_PLUGINS_ENABLED="yes"
