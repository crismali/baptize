# Baptize config
BAPTIZE_ROOT="$HOME/.baptize"

# Prompt settings
PROMPT_ARROW="❯ "
PROMPT_COLOR="$BLUEF_CYANB"
PROMPT_ICON_COLOR="$CYANF_BLUEB"
PROMPT_ICON="☆ "
PROMPT_CONTENT=" \w "
PROMPT_2_COLOR="$YELLOW"
PROMPT_2_ARROW="❯❯ "

# Git prompt settings
GSHOW_STATS="yes"
GSHORT_PATH="yes"
GPULL_ICON=" ⇣ "
GPUSH_ICON=" ⇡ "
GCLEAN_ICON=" ✓ "
GCLEAN_COLOR="$BLUEF_GREENB"
GMODIFIED_COLOR="$BLUEF_YELLOWB"
GADDED_COLOR="$GREENF_YELLOWB"
GDELETED_COLOR="$REDF_YELLOWB"
GSTATS_SEPERATOR_COLOR="$BLUEF_YELLOWB"

# Plugin Settings
BAPTIZE_PLUGIN_ROOT="$BAPTIZE_ROOT/plugins"
BAPTIZE_PLUGINS_ENABLED="yes"
